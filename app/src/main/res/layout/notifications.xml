<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTextLight"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar_notifications" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp">


        <TextView
            android:id="@+id/leave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Leave"
            android:drawableEnd="@drawable/forwardarrow"
            android:textColor="@color/colorTextDark"
            android:textSize="20sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/colorTextDark"/>

        <TextView
            android:id="@+id/overtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Overtime"
            android:drawableEnd="@drawable/forwardarrow"
            android:textColor="@color/colorTextDark"
            android:textSize="20sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/colorTextDark"/>

        <TextView
            android:id="@+id/manuallog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Manual Log"
            android:drawableEnd="@drawable/forwardarrow"
            android:textColor="@color/colorTextDark"
            android:textSize="20sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/colorTextDark"/>

        <TextView
            android:id="@+id/training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Training"
            android:drawableEnd="@drawable/forwardarrow"
            android:textColor="@color/colorTextDark"
            android:textSize="20sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/colorTextDark"/>

        <TextView
            android:id="@+id/schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Schedule"
            android:drawableEnd="@drawable/forwardarrow"
            android:textColor="@color/colorTextDark"
            android:textSize="20sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/colorTextDark"/>

        <TextView
            android:id="@+id/announcement_notif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Announcement"
            android:drawableEnd="@drawable/forwardarrow"
            android:textColor="@color/colorTextDark"
            android:textSize="20sp"/>

        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp" android:layout_marginStart="0dp"
        android:background="@color/colorTextDark"/>

        <TextView
            android:id="@+id/exception"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Exception"
            android:drawableEnd="@drawable/forwardarrow"
            android:textColor="@color/colorTextDark"
            android:textSize="20sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="0dp"
            android:background="@color/colorTextDark"/>
    </LinearLayout>

</LinearLayout>
